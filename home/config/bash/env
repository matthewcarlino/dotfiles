#!/bin/bash

TERM=xterm-256color

HISTCONTROL=ignoreboth
HISTSIZE=1000
HISTFILESIZE=2000

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$HOME/.local/usr/local/bin:$PATH"
fi

# set PATH so it includes flatpak bin if it exists
if [ -d "/var/lib/flatpak/exports/bin" ]; then
    PATH="/var/lib/flatpak/exports/bin:$PATH"
fi

MANPATH=$(manpath)

# dev tools
export EDITOR=vim
[ -s "$HOME/.cargo/env" ] && \. "$HOME/.cargo/env"
export GOBIN=$HOME/.local/bin

#  NPM Stuff
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm

# opam env
test -r $HOME/.opam/opam-init/env_hook.sh && . $HOME/.opam/opam-init/env_hook.sh > /dev/null 2> /dev/null || true
test -r $HOME/.opam/opam-init/variables.sh && . $HOME/.opam/opam-init/variables.sh > /dev/null 2> /dev/null || true
